set $mod Mod1

# SETTINGS
font pango: SourceCodeProMedium 12px

client.focused #000000 #000000 #ffffff #000000 #000000
client.focused_inactive #000000 #000000 #ffffff #000000 #000000

# disables title bars and borders
for_window [class="^.*"] border pixel 1
hide_edge_borders smart

# gaps
gaps inner 10
gaps outer 0
smart_gaps on

# KEYBINDS
bindsym $mod+Return exec --no-startup-id termite
bindsym $mod+Shift+q kill
bindsym $mod+d exec --no-startup-id dmenu_run -nb "#000000" -sb "#808080" -fn "SourceCodePro-10"
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec --no-startup-id "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+v split h
bindsym $mod+Shift+v split v

bindsym $mod+f fullscreen toggle

bindsym Control+Tab exec --no-startup-id playerctl play-pause
bindsym Control+e exec --no-startup-id playerctl next
bindsym Control+q exec --no-startup-id playerctl previous

# change container layout (stacked, tabbed, toggle split)
# bindsym $mod+s layout stacking
# bindsym $mod+w layout tabbed
# bindsym $mod+e layout toggle split

# WORKSPACES
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

workspace $ws4 output DP-2
workspace $ws5 output DVI-D-0
workspace $ws6 output DP-2
workspace $ws7 output DP-2

for_window [class="Spotify"] move to workspace $ws4 split h
for_window [class="Slack"] layout stacked
assign [class="Spotify"] $ws4
assign [class="discord"] $ws4
assign [class="Slack"] $ws4
assign [class="Vlc"] $ws7

# RESIZE
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

bindsym $mod+s [class="Spotify"] focus; move left;

exec --no-startup-id xrandr --output DP-4 --mode 2560x1440 --rate 144 --output DP-2 --mode 2560x1440 --rate 144
exec --no-startup-id sudo ntpd -qg
exec --no-startup-id xrdb -load ~/.Xresources
exec --no-startup-id compton
exec --no-startup-id feh --bg-fill ~/images/leaves.jpg
exec --no-startup-id ~/.config/polybar/launch.sh
exec --no-startup-id termite
exec --no-startup-id chromium
exec --no-startup-id spotify
exec --no-startup-id discord
